extends layout

block content
  h1= title
  p #{title} to view blog posts
  form(name="sign-in", method="post")
    p Username:
    input(type="text", name="username")
    p Password:
    input(type="password", name="password")
    p
    input(type="submit", value="Sign in")
  p Dont have an account?
    a(href="/signup") Sign up
  if e
    h5=e